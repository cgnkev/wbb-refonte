{% extends '::base.html.twig' %}

{% block body %}
    <div class="full-white">
        <div id="editprofile" class="page {% if is_mobile() and not is_tablet() %}mobile {% endif %}wrap padding-bottom-20">
            <div  class="ui wrap">
                <div class="margin-top-20">
                    <div id="edit-account">
                        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
                            <div class="block-top wrap">
                                <div class="avatar-profil left" >
                                    <img src="{{  showImage(user.avatar, 'av_large') }}" height="145" width="145" class="radius-max" id="avatar-img">
                                </div>
                                <div class="group left">
                                    <div class="title text-transform-capitalize bold">
                                        <h5>{{ user.username }}</h5>
                                    </div>
                                    <div class="subgroup margin-top-10 {% if is_mobile() and not is_tablet() %}margin-bottom-10{% else %}margin-bottom-40{% endif %} wrap">
                                        {% if city %}
                                            <div class="text-transform-capitalize text-align-center">
                                                <div class="city">
                                                    <img src="{{ asset('bundles/wbbcore/images/UI/icon_map.jpg') }}">
                                                    {% if city %}
                                                        {{ city ~ ',' }}
                                                    {% endif %}
                                                    {% if city.country %}
                                                        {{ city.country }}
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% elseif user.prefStartCity or user.country %}
                                            <div class="text-transform-capitalize text-align-center">
                                                <div class="city">
                                                    <img src="{{ asset('bundles/wbbcore/images/UI/icon_map.jpg') }}">
                                                    {% if user.prefStartCity %}
                                                        {{ user.prefStartCity ~ ',' }}
                                                    {% endif %}
                                                    {% if user.country %}
                                                        {{ user.country }}
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% else %}
                                            <div class="text-transform-capitalize text-align-center">
                                                <div class="city">
                                                    &nbsp;
                                                </div>
                                            </div>
                                        {% endif %}
                                        <div class="form-group">
                                            <div class="file-image wrap">
                                                {{ form_widget(form.avatar, { 'attr' : { 'class': 'form-file no-text' } }) }}
                                            </div>
                                        </div>
                                    </div> <!-- .subgroup.right -->
                                </div> <!-- .group.right -->
                            </div>

                            <div class="margin-bottom-20">
                                <div class="clear"></div>
                                <div class="select-two margin-top-10 gender">
                                    <label class="margin-right-20">Gender</label>
                                    <div class="left" style="{% if is_mobile() and not is_tablet() %}width: 100%{% else %}{% if is_mobile() and not is_tablet() %}width: 100%{% else %}width: 300px{% endif %}{% endif %}">
                                        {{ form_widget(form.title, { 'attr' : { 'class': 'ui-dropdown' } }) }}
                                    </div>
                                </div>
                                <div class="clear"></div>
                                <div class="group-form margin-top-10">
                                    <label class="margin-right-20">Firstname</label>
                                    {{ form_widget(form.firstname, { 'attr' : { 'class': 'form-text', 'placeholder': 'Firstname' } }) }}
                                    <div class="clear"></div>
                                </div>
                                <div class="group-form margin-top-10">
                                    <label class="margin-right-20">Lastname</label>
                                    {{ form_widget(form.lastname, { 'attr' : { 'class': 'form-text', 'placeholder': 'Lastname' } }) }}
                                    <div class="clear"></div>
                                </div>
                                <div class="group-form margin-top-10">
                                    <label class="margin-right-20">Email</label>
                                    {{ form_widget(form.email, { 'attr' : { 'class': 'form-text', 'placeholder': 'Email' } }) }}
                                    <div class="clear"></div>
                                </div>
                                <div class="date-birthday text-align-center margin-top-10">
                                    <label class="margin-right-20">Date of Birth</label>
                                    <div{% if is_mobile() and not is_tablet() %} class="date-width" style="width: 380px"{% endif %}>
                                        <div class="select-wrap left">
                                            {{ form_widget(form.birthdate.month, { 'attr' : { 'class': 'ui-dropdown' } }) }}
                                        </div>
                                        <div class="select-wrap left">
                                            {{ form_widget(form.birthdate.day, { 'attr' : { 'class': 'ui-dropdown', 'placeholder': '' } }) }}
                                        </div>
                                        <div class="select-wrap left last">
                                            {{ form_widget(form.birthdate.year, { 'attr' : { 'class': 'ui-dropdown' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="clear"></div>

                                <div class="select-two margin-top-10">
                                    <label class="margin-right-20">Country</label>
                                    <div class="left" style="{% if is_mobile() and not is_tablet() %}width: 100%{% else %}width: 300px{% endif %}">
                                        {{ form_widget(form.country, { 'attr' : { 'class': 'ui-dropdown' } }) }}
                                    </div>
                                </div><!-- #countries -->
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10">
                                <label class="margin-right-20">Cities you like to go</label>
                                {{ form_widget(form.prefCity1, { 'attr' : { 'class': 'form-text auto-city', 'placeholder': 'Choose a city' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10 form-text-without-label">
                                {{ form_widget(form.prefCity2, { 'attr' : { 'class': 'form-text auto-city', 'placeholder': 'Choose a city' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10 form-text-without-label">
                                {{ form_widget(form.prefCity3, { 'attr' : { 'class': 'form-text auto-city', 'placeholder': 'Choose a city' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10">
                                <label class="margin-right-20">Favorite Bars</label>
                                {{ form_widget(form.prefBar1, { 'attr' : { 'class': 'form-text auto-bars', 'placeholder': 'Choose a bar' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10 form-text-without-label">
                                {{ form_widget(form.prefBar2, { 'attr' : { 'class': 'form-text auto-bars', 'placeholder': 'Choose a bar' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10 form-text-without-label">
                                {{ form_widget(form.prefBar3, { 'attr' : { 'class': 'form-text auto-bars', 'placeholder': 'Choose a bar' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10">
                                <label class="margin-right-20">Drink brands</label>
                                {{ form_widget(form.prefDrinkBrand1, { 'attr' : { 'class': 'form-text auto-brands', 'placeholder': 'Choose a brand' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10 form-text-without-label">
                                {{ form_widget(form.prefDrinkBrand2, { 'attr' : { 'class': 'form-text auto-brands', 'placeholder': 'Choose a brand' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10 form-text-without-label">
                                {{ form_widget(form.prefDrinkBrand3, { 'attr' : { 'class': 'form-text auto-brands', 'placeholder': 'Choose a brand' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10">
                                <label class="margin-right-20">Categories or cocktails</label>
                                {{ form_widget(form.prefCocktails1, { 'attr' : { 'class': 'form-text auto-cocktails', 'placeholder': 'Choose a cocktail' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10 form-text-without-label">
                                {{ form_widget(form.prefCocktails2, { 'attr' : { 'class': 'form-text auto-cocktails', 'placeholder': 'Choose a cocktail' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-form margin-top-10 form-text-without-label">
                                {{ form_widget(form.prefCocktails3, { 'attr' : { 'class': 'form-text auto-cocktails', 'placeholder': 'Choose a cocktail' } }) }}
                                <div class="clear"></div>
                            </div>

                            <div class="group-checkbox">
                                <div class="group-form checkbox margin-top-10">
                                    <label class="wrap">{{ form_widget(form.stayInformed,  {'attr': {'class': 'form-checkbox left'}}) }}
                                        Subscribe to our newsletters</label>
                                </div>

                                <div class="group-form checkbox margin-top-10">
                                    <label class="wrap">{{ form_widget(form.stayBrandInformed,  {'attr': {'class': 'form-checkbox left'}}) }}
                                        Subscribe to our partners newsletters</label>
                                </div>
                            </div>
                            <div class="clear"></div>
                            {{ form_rest(form) }}
                            <div class="group-actions margin-top-40 right {% if is_mobile() and not is_tablet() %}margin-bottom-40{% endif %}">
                                <input type="submit" class="form-submit btn btn-submit text-align-uppercase bold" value="Done editing">
                            </div>
                        </form>
                        <div class="clear"></div>
                        {% if not form.vars.valid %}
                            <div id="message" class="margin-top-20 wrap">
                                <div>
                                    {{ form_errors(form) }}
                                    {{ form_errors(form.username) }}
                                    {{ form_errors(form.title) }}
                                    {{ form_errors(form.firstname) }}
                                    {{ form_errors(form.lastname) }}
                                    {{ form_errors(form.email) }}
                                    {{ form_errors(form.birthdate) }}
                                    {{ form_errors(form.country) }}
                                    {{ form_errors(form.prefCity1) }}
                                    {{ form_errors(form.prefCity2) }}
                                    {{ form_errors(form.prefCity3) }}
                                    {{ form_errors(form.prefBar1) }}
                                    {{ form_errors(form.prefBar2) }}
                                    {{ form_errors(form.prefBar3) }}
                                    {{ form_errors(form.prefDrinkBrand1) }}
                                    {{ form_errors(form.prefDrinkBrand2) }}
                                    {{ form_errors(form.prefDrinkBrand3) }}
                                    {{ form_errors(form.prefCocktails1) }}
                                    {{ form_errors(form.prefCocktails2) }}
                                    {{ form_errors(form.prefCocktails3) }}
                                </div>
                                <div class="clear"></div>
                            </div>
                        {% endif %}
                    </div>
                </div> <!-- .margin-top-20 -->
                <div class="clear"></div>
            </div> <!-- #UI -->
        </div> <!-- #editprofile -->
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/wbbcore/css/jquery_ui/jquery-ui.min.css') }}" media="all" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/bundles/wbbcore/js/plugins/jquery-ui.min.js"></script>
    <script type="text/javascript" src="/bundles/wbbcore/js/plugins/icheck.min.js"></script>
    <script type="text/javascript" src="/bundles/wbbuser/js/modules/profile.edit.wbb.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.form-checkbox').iCheck({
                checkboxClass: 'icheckbox_flat',
                increaseArea: '20%' // optional
            });
        });
    </script>
{% endblock %}
{% if is_simple_quote is not defined %}<article class="small {% if first is defined %}firstblock{% endif %}">{% endif %}
    <div class="title vcenter{% if is_simple_quote is defined %} description{% endif %}">
        {% if is_simple_quote is not defined %}
            {% if has_quote is not defined or n.quoteText is not defined or n.quoteText == '' %}
            <h2><a href="{{ path('wbb_news_details_page',{newsSlug:n.slug}) }}">{{ n.title|truncate(30, true, '...') }}</a></h2>
            {% endif %}
        {% endif %}
        {% if has_quote is defined %}
        {% if n.quoteText is defined and n.quoteText and n.quoteText != '' %}
            <h1>
                <a  class="quote-cls"  href="{{ path('wbb_news_details_page',{newsSlug:n.slug}) }}">“{{ n.quoteText|truncate(60, true, '...') }}”</a>
            </h1>
            <p class="m-margin">{{ n.quoteAuthor|truncate(20, true, '...') }}</p>
        {% endif %}
        {% endif %}
        {% if is_simple_quote is not defined %}
            <a class="plus-btn" href="{{ path('wbb_news_details_page',{newsSlug:n.slug}) }}"><span></span></a>
        {% endif %}
    </div>
{% if is_simple_quote is not defined %}</article>{% endif %}
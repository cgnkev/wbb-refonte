{% extends 'SonataAdminBundle:CRUD:base_edit.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false&libraries=places'></script>
    <script src="{{ asset('bundles/wbbbar/js/admin/locationpicker.jquery.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('ul.nav-tabs li a').click(function() {
                $('.mapcontainer').locationpicker({
                    location: { latitude: $('#{{ admin.uniqId }}_latitude').val(), longitude: $('#{{ admin.uniqId }}_longitude').val() },
                    radius: 0,
                    zoom: 15,
                    scrollwheel: true,
                    inputBinding: {
                        latitudeInput: $('#lat, #{{ admin.uniqId }}_latitude'),
                        longitudeInput: $('#lon, #{{ admin.uniqId }}_longitude'),
                        locationNameInput: $('#mpAddress')
                    },
                    enableAutocomplete: true
                });
            });

            //Password Generator
            $.extend({
                password: function (length, special) {
                    var iteration = 0;
                    var password = "";
                    var randomNumber;
                    if(special == undefined){
                        var special = false;
                    }
                    while(iteration < length){
                        randomNumber = (Math.floor((Math.random() * 100)) % 94) + 33;
                        if(!special){
                            if ((randomNumber >=33) && (randomNumber <=47)) { continue; }
                            if ((randomNumber >=58) && (randomNumber <=64)) { continue; }
                            if ((randomNumber >=91) && (randomNumber <=96)) { continue; }
                            if ((randomNumber >=123) && (randomNumber <=126)) { continue; }
                        }
                        iteration++;
                        password += String.fromCharCode(randomNumber);
                    }
                    return password;
                }
            });

            function generatePassword(length){
                var chars = "ABCDEFGHIJKLMNOPQRSTUVWXTZabcdefghiklmnopqrstuvwxyz";
                var string_length = length;
                var randomPassword = '';
                var charCount = 0;
                var numCount = 0;

                for (var i=0; i<string_length; i++) {
                    // If random bit is 0, there are less than 3 digits already saved, and there are not already 3 characters saved, generate a numeric value.
                    if((Math.floor(Math.random() * 2) == 0) && numCount < 3 || charCount >= 3) {
                        var rnum = Math.floor(Math.random() * 10);
                        randomPassword += rnum;
                        numCount += 1;
                    } else {
                        // If any of the above criteria fail, go ahead and generate an alpha character from the chars string
                        var rnum = Math.floor(Math.random() * chars.length);
                        randomPassword += chars.substring(rnum,rnum+1);
                        charCount += 1;
                    }
                }

                return randomPassword;
            }

            $('#pwd-generator').click(function(e){
                // Generate the password variable from the generator function
//                pa/ss/wo/rd = $./pa/ss/wo/rd/(8/, /fa/ls/e)/;
                password = generatePassword(6);
                // Empty the password field then append the password and fade In
                $('.pwd-field').hide().val(password).fadeIn('slow');
                e.preventDefault();
            });

        });
    </script>
{% endblock %}


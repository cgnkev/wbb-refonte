<article class="bestof">

    <a href="
       {% if app.user %}
           {% if b in app.user.favoriteBestOfs %}
               {{ path('wbb_favorite_bestof_delete', {'bestOfId':b.id}) }}
           {% else%}
               {{ path('wbb_favorite_bestof_add', {'bestOfId':b.id}) }}
           {% endif %}
       {% else %}
           #
       {% endif %}" class="btn-round dark star favorite-btn"></a>

    <div class="txt vcenter">
        <div class="circle vcenter">
            {% if city is defined %}
                <h2>{{ b.name }}</h2>
                <h3>{% if b.city %}In {{ b.city.name }}{% endif %}</h3>
            {% else %}
                <h2>{% if b.city %}{{ b.city.name }}'s Best{% else %}World's Best{% endif %}</h2>
                <h3>{{ b.name }}</h3>
            {% endif %}
        </div>
    </div>
        <img src="{% if nolazyloading is defined %}
                {% filter showMedia %}{% path b.image, 'bestof_small' %}{% endfilter %}
                  {% endif %}
                
       " class="scale-with-grid" data-src="{% filter showMedia %}{% path b.image, 'bestof_small' %}{% endfilter %}" alt="{{ b.name }}" width="570" height="428"/>
    {#{% if withCity is defined and withCity %}#}
    {% if b.city %}
        <a href="{{ path('wbb_bar_bestof_local', {bestOfSlug: b.slug, citySlug: b.city.slug}) }}" class="overlay-link"></a>
    {% else %}
        <a href="{{ path('wbb_bar_bestof_global', {bestOfSlug: b.slug}) }}" class="overlay-link"></a>
    {% endif %}

</article>
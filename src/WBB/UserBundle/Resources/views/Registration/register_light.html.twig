{% trans_default_domain 'FOSUserBundle' %}

<div id="account" class="left">
    <div class="subtitle text-transform-uppercase bold">I already have an account</div>
    {{ render(controller('WBBUserBundle:Security:login',{'light':true})) }}
</div> <!-- #account.block.wrap -->

{% if is_mobile() and not is_tablet() %}<hr>{% endif %}

<div id="create-account" class="left">
    <div class="subtitle text-transform-uppercase bold">Create an account now</div>
    <a href="{{ path('fos_user_registration_register') }}" id="register-btn" class="btn btn-create-account text-align-center margin-top-30 radius-30 wrap bold">REGISTER</a>
    <div id="register-form" style="display:none">
        <div class="connect-fb margin-top-20 {% if is_mobile() and not is_tablet() %}text-align-center{% endif %}">Pre fill your profile with <a onclick="fillInForm('#register_form');" class="btn btn-create-with-fb radius-30">Facebook</a></div>
        <form action="{{ path('wbb_user_registration_register_light') }}" method="POST" id="register_form">
            <div class="margin-bottom-20">
                {{ form_widget(form.username, { 'attr' : { 'class': 'form-text margin-top-20', 'placeholder': 'Pseudo *'  , 'tabindex' : '6'} }) }}
                {{ form_widget(form.email, { 'attr' : { 'class': 'form-text margin-top-10', 'placeholder': 'Email *'  , 'tabindex' : '7' } }) }}
                {{ form_widget(form.plainPassword.first, { 'attr' : { 'class': 'form-text margin-top-10', 'placeholder': 'Password *' , 'tabindex' : '8'} }) }}
                {{ form_widget(form.plainPassword.second, { 'attr' : { 'class': 'form-text margin-top-10', 'placeholder': 'Confirm Password *'  , 'tabindex' : '9' } }) }}
            </div>
            <div class="select-two date-birthday text-align-center ui-dropdown-list-form">
                <label class="margin-bottom-15">Date of Birth *</label>
                <div class="group-small-select">
                    <div class="select-wrap left">
                        {{ form_widget(form.birthdate.month, { 'attr' : { 'class': is_mobile() or is_tablet() ?  'ui-dropdown' : 'select2-dropdown light'  , 'tabindex' : '10'} }) }}
                    </div>
                    <div class="select-wrap left">
                        {{ form_widget(form.birthdate.day, { 'attr' : { 'class': is_mobile() or is_tablet() ?  'ui-dropdown' : 'select2-dropdown light', 'placeholder': '' , 'tabindex' : '11' } }) }}
                    </div>
                    <div class="select-wrap left last">
                        {{ form_widget(form.birthdate.year, { 'attr' : { 'class': is_mobile() or is_tablet() ?  'ui-dropdown' : 'select2-dropdown light'  , 'tabindex' : '12'} }) }}
                    </div>
                </div>
            </div>
            <div class="clear"></div>
            <div class="select-two margin-top-10 ui-dropdown-list-form country-dropdown">
                {{ form_widget(form.country, { 'attr' : { 'class': is_mobile() or is_tablet() ?  'ui-dropdown' : 'select2-dropdown light'  , 'tabindex' : '13' } }) }}
            </div>

            <div class="clear"></div>
            <p class="wrap">
                * : Mandatory field
            </p>

            {{ form_rest(form) }}
            <div class="group-actions margin-top-20 margin-bottom-20">
                <input type="submit" class="form-submit btn btn-submit text-align-uppercase bold" value="Confirm" tabindex="14">
            </div>
        </form>

        <div id="message" class="wrap margin-top-20 margin-bottom-20">

            <div class="clear"></div>
        </div>
    </div> <!-- #register-form -->
</div>

<script type="text/javascript">


    $(function(){
        // init Select 2
        $("select.select2-dropdown.light").select2({
            minimumResultsForSearch: -1
        });

        // init Select 2
        $("select.select2-dropdown.light#fos_user_registration_form_country").select2({
            minimumResultsForSearch: 10
        });
    });

    $("#register-btn").click(function(e) {
        if (popinFrom !== 'signin') {
            e.preventDefault();
            var $registerForm = $("#register-form");
            if ($registerForm.is(":visible")) {
                $registerForm.fadeOut("slow");
                $(".popup .title").fadeIn("slow", function() {
                    PopIn.updatePopin();
                });
            } else {
                $registerForm.fadeIn("slow");
                $(".popup .title").fadeOut("slow", function() {
                    PopIn.updatePopin();
                });
            }
            $(this).hide();
        }
    });
</script>

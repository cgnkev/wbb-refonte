    <div class="detect-scroll"></div>
    <aside class="mobile-menu">

        <table>

            <tr class="search">
                <td>
                    <form class="dark">
                        <input type="text" placeholder="Search..."/>
                        <input type="submit" value=" "/>
                    </form>
                </td>
            </tr>

            <tr class="header-nav">
                <td>
                    <nav class="h3">
                        <a href="{{ path('wbb_cities') }}">Cities</a>
                        <a href="{{ path('wbb_bar_guides') }}">Bar Guides</a>
                        <a href="">News</a>
                    </nav>
                </td>
            </tr>

            <tr class="links">
                <td>
                    <a class="finder h3">
                        <img src="{{ asset('bundles/wbbcore/images/icons/glass.png') }}" alt="glass" width="10" height="16"/>

{% if b %}
    <article class="bestof">
        <h1>Hey there !</h1>
        <a data-type="{{ entity_light_type(b) }}" data-name="{{ b.name }}" href="{{ favorite_url(app.user, b) }}" class="btn-round star dark {% if is_favorite(app.user, b) %}active changed{% endif %}"></a>
        <div class="txt vcenter">
            <div class="circle vcenter">
                {% if city is defined %}
                    <h2>{{ b.name }}</h2>
                    <h3>{% if b.city %}In {{ b.city.name }}{% endif %}</h3>
                {% else %}
                    <h2>{% if b.city %}{{ b.city.name }}'s Best{% else %}World's Best{% endif %}</h2>
                    <h3>{{ b.name }}</h3>
                {% endif %}
            </div>
        </div>
            <img src="{% if nolazyloading is defined %}{{ showImage(b.image, 'bestof_384_280') }}{% endif %}"
                 class="scale-with-grid" data-src="{{ showImage(b.image, 'bestof_384_280') }}" alt="{{ b.name }}" width="384" height="280"/>
        {% if b.city %}
            <a href="{{ path('wbb_bar_bestof_local', {bestOfSlug: b.slug, citySlug: b.city.slug}) }}" class="overlay-link"></a>
        {% else %}
            <a href="{{ path('wbb_bar_bestof_global', {bestOfSlug: b.slug}) }}" class="overlay-link"></a>
        {% endif %}
    </article>
{% endif %}

        <script type="text/javascript">
                var MARKET = "US";
                var LANG = "en";
                var BASEURL = "{{ asset('bundles/wbbcore/') }}";
                window.userConnected = {% if app.user%}true{% else %}false{% endif %};
                
                {% if wbb_not_found %}
                    $(document).ready(function(){
                        $('.star').hide();
                    });
                {% endif %}
                var showConfirmed = 0;
                {% set user_confirmed = false %}
                {% for message in app.session.flashbag.get('wbb-user-confirmed') %}
                    {% set user_confirmed = true %}
                {% endfor %}
                {% if user_confirmed %}
                    showConfirmed = 1;
                {% endif %}

                var showProfilePopin = 0;
                {% set profile_message = false %}
                {% for message in app.session.flashbag.get('wbb-complete-profile') %}
                    {% set profile_message = true %}
                {% endfor %}
                {% if profile_message %}
                    showProfilePopin = 1;
                {% endif %}

                var showEmailPopin = 0;
                {% set email_popin = false %}
                {% for message in app.session.flashbag.get('wbb-check-email') %}
                    {% set email_popin = true %}
                {% endfor %}
                {% if email_popin %}
                    showProfilePopin = 1;
                {% endif %}

                var showNewPassword = {{ app.request.query.get('newpassword', 0) }};
                var showResettingForm = "{{ app.request.query.get('token', 0) }}";
                var showLoginForm = {{ app.request.query.get('login', 0) }};
                var loginBackUrl = "{{ app.request.query.get('back_url', 0) }}";
                var fbPrefill = {{ app.request.query.get('prefill', 0) }};

                var favoriteName = '';

                var profileWithPopinUrl = "{{ path('fos_user_profile_show', { emailPopin: 1}) }}";
                var newPasswordUrl = "{{ path('fos_user_resetting_request') }}";
                var popinFrom = '';
                {% if app.request.attributes.get('_route') != '' %}
                {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
                {% else %}
                {% set currentPath = '' %}
                {% endif %}
                var currentPage = "{{ currentPath }}";

                {% if app.user %}
                    $(document).ready(function() {
                        var action = $.cookie('light_action');

                        if (action === 'tip') {
                            $('#wbb_barbundle_tip_description').val($.cookie('light_name'));
                            $('#tips').submit();

                            $.removeCookie('light_action');
                            $.removeCookie('light_type');
                            $.removeCookie('light_url');
                            $.removeCookie('light_id');
                            $.removeCookie('light_favorite');
                            $.removeCookie('light_from');
                            $.removeCookie('light_name');
                        }
                    });
                {% endif %}

                $(document).ready(function() {
                    var firstScrolled = false;
                    if ($.cookie('just_loggedin') !== undefined) {
                        $('header.desktop .logged').mouseover();
                        // if is ipad or Mobile
                        if( ismobile || istablet )
                            $('header.desktop .logged .in-action').click();
                        $.removeCookie('just_loggedin');
                    }
                    $(window).on('scroll' , function(){
                        if( ismobile || istablet ){
                            if(! firstScrolled ){
                                $('header.desktop .logged .in-action').click();
                                firstScrolled = true;
                            }
                        }else{
                            $('header.desktop .logged').mouseout();
                        }
                    });
                });
        </script>


{% extends base_template %}

{% block title %}
    {% if admin.id(object) is not null %}
        {{ "title_edit"|trans({'%name%': admin.toString(object) }, 'SonataAdminBundle') }}
    {% else %}
        {{ "title_create"|trans({}, 'SonataAdminBundle') }}
    {% endif %}
{% endblock%}

{% block side_menu %}{{ knp_menu_render(admin.sidemenu(action), {'currentClass' : 'active'}, 'list') }}{% endblock %}

{% use 'WBBBarBundle:Admin:BestOf/base_edit_form.html.twig' with form as parentForm %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#field_widget_{{ admin.uniqid }}_bars tr:gt(0) td:eq(1) select').live('change', function(){
                var id = $(this).attr('id');
                var newId = '#'+id.substr(0,(id.length-3))+'media';
                alert(newId);
            });
        });
    </script>
{% endblock %}

{% block form %}
    {{ block('parentForm') }}
{% endblock %}

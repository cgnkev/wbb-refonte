{% if not is_mobile() or is_tablet() %}
    <div class="clear"></div>
    <section class="footer-ad" data-ad-tag="{{ ad.tag }}">
        <div class="container align-center">
            <div class="twelve columns">
                <hr/>
                {% if ad.link is not empty %}<a onclick="_gaq.push(['_trackEvent', 'Ads', 'Ads click', '{{ ad.tag }}']);" href="{{ ad.link }}" target="_blank" rel="nofollow">{% endif %}
                    <img class="m-margin" src="{{ showImage(ad.image, 'ads_728_90') }}" alt="{{ ad.name }}" width="728" height="90"/>
                {% if ad.link is not empty %}</a>{% endif %}
            </div>
        </div>
    </section>
{% endif %}
